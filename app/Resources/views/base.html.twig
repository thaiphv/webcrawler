<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MPF Crawler | {% block title %}{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/mpfcrawler/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/mpfcrawler/css/bootstrap-theme.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/mpfcrawler/css/theme.css') }}">
    {% block stylesheets %}{% endblock %}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('_homepage') }}">MPF Crawler</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li {% if app.request.attributes.get('_route') == '_setting_index' %}class="active"{% endif %}><a href="{{ path('_setting_index') }}">Settings</a></li>
                <li {% if app.request.attributes.get('_route') == '_task_index' %}class="active"{% endif %}><a href="{{ path('_task_index') }}">Crawler Tasks</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container theme-showcase">
    <div class="row col-sm-12">
        {% for message in app.session.flashbag.get('notice') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}
        {% for message in app.session.flashbag.get('error') %}
            <div class="alert alert-warning" role="alert">{{ message }}</div>
        {% endfor %}
    </div>
    {% block content %}{% endblock %}
</div>
<script src="{{ asset('bundles/mpfcrawler/js/jquery-1.11.1.min.js') }}"></script>
<script src="{{ asset('bundles/mpfcrawler/js/bootstrap.min.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
