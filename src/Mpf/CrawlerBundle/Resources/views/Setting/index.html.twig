{% extends '::base.html.twig' %}

{% block title %}Common Settings{% endblock %}

{% block content %}
    <div class="row col-sm-12">
        <div class="page-header">
            <h1>Common Settings</h1>
        </div>
        <div>
            {{ form_start(form, {'action': path('_setting_index'), 'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
            {{ form_errors(form) }}

            {% for name, field in form %}
                {% if name != '_token' %}
                    <div class="form-group">
                        {{ form_label(field, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        <div class="col-sm-9">
                            {{ form_errors(field) }}
                            {{ form_widget(field, {'attr': {'class': 'form-control'}, 'required': true}) }}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary">Save Settings</button>
                    <a href="{{ path('_setting_index') }}" class="btn btn-link">Cancel</a>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}